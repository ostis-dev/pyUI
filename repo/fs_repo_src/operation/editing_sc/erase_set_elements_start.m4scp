#include "scp_keynodes.scsy"
#include "etc_questions.scsy"
#include "lib_answer.scsy"

procedure(erase_set_elements_start,
[[	
	oper2="/operation/editing_sc/erase_elements/erase_elements";
	q_erase_set_elements;
]],
[{
	handler,element,inputarc,question_node,descr,arc,shift,elements,segment,sheet,attr,arg_set,t_seg,arc1
}],
{[
	1_: in_: handler,
	2_: in_: element,
	3_: in_: inputarc,
	4_: in_: question_node
]}
)

sys_get_location([1_: fixed_: question_node, 2_: assign_: segment])	
sys_spin_segment([1_: fixed_: segment, 2_: assign_: t_seg])
sys_set_default_segment([1_: fixed_: segment])

/////////////////////////////////////////////////////
// Checking operation start full condition
searchElStr3([
	1_: fixed_: q_erase_set_elements,
	2_: assign_: const_: pos_: arc,
	3_: fixed_: question_node
],,exit)

/////////////////////////////////////////////////////
// Getting question parameters
searchElStr5([
	1_: fixed_: question_node,
	2_: assign_: const_: pos_: arc,
	3_: assign_: node_: arg_set,
	4_: assign_: const_: pos_: arc1,
	5_: assign_: node_: const_: attr 
],,exit)

genEl([1_: assign_: node_: const_: shift])

/////////////////////////////////////////////////////
// Call of the requested procedure
callReturn([1_: fixed_: oper2,
	    2_: fixed_:
		{[
			1_: fixed_: arg_set,
			2_: fixed_: arg_set,
			3_: fixed_: shift
		]}
])

label(exit)

return()
end